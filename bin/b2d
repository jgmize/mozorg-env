#!/bin/bash -ex
BIN=${0%/*}
if [ -e $BIN/../.env ]; then
    . $BIN/../.env
fi

#TODO: windows support via msys
if [ $(uname) == "Darwin" ]; then
    if [ "$DOCKER_HOST" ]; then
        if [[ "$DOCKER_HOST" =~ "$(boot2docker ip)" ]]; then
            export B2D=1
        fi
    else
        boot2docker init
        if [ $(boot2docker status) == "poweroff" ]; then
            boot2docker start
        else
            eval $(boot2docker shellinit)
        fi
        export B2D=1
    fi
fi
