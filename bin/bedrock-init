#!/bin/bash -ex
if  [ ! $BEDROCK ]; then
    BIN=${0%/*}
    export BEDROCK=$BIN/../apache/bedrock/base/bedrock
fi

if [ ! -e $BEDROCK ]; then
    git clone --recursive https://github.com/mozilla/bedrock $BEDROCK
fi

if [ ! -e $BEDROCK/locale ]; then
    svn checkout https://svn.mozilla.org/projects/mozilla.com/trunk/locales/ $BEDROCK/locale
fi
